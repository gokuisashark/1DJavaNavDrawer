<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <!--- Creating the calendar table -->
    <com.example.fish.a1djava.library.WeekView
        android:id="@+id/weekView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:eventTextColor="@android:color/white"
        app:textSize="12sp"
        app:hourHeight="60dp"
        app:headerColumnPadding="8dp"
        app:headerColumnTextColor="@color/toolbar_text"
        app:headerRowPadding="12dp"
        app:columnGap="8dp"
        app:noOfVisibleDays="3"
        app:headerRowBackgroundColor="@color/toolbar"
        app:dayBackgroundColor="#05000000"
        app:todayBackgroundColor="#1848adff"
        app:headerColumnBackground="#ffffffff"
        app:todayHeaderTextColor="@color/accent" />

    <View
        android:id="@+id/add_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Write the event"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>


    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/event"
        android:layout_margin="50dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/addStartingtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick Starting Time"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_margin="40dp"
        android:textSize="24dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/addEndingtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick Ending Time"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_margin="40dp"
        android:textSize="24dp"
        android:visibility="gone"/>





</RelativeLayout>
